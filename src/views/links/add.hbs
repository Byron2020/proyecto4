<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group" class="items">
                            <input type="email" class="form-control" name="correo_user" placeholder="Correo" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password_user" placeholder="Contraseña">
                        </div>
                        <div class="form-group">
                            <select id="cars" name="tipo_user" class="form-control" >
                                <option value="1">Administrador</option>
                                <option value="2">Comprador</option>
                                <option value="3">Vendedor</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre_user" placeholder="Nombres y Apellidos">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="celular_user" placeholder="Numero Celular">
                        </div>
                        <div class="form-group">
                            <textarea name="direccion_user" rows="2" class="form-control" placeholder="Dirección"></textarea>
                        </div>
                        <div class="form-group">
                            <select id="cars" name="ciudad_user" class="form-control" >
                                <option value="Guaranda">Guaranda</option>
                                <option value="Riobamba">Riobamba</option>
                                <option value="Quito">Quito</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select id="cars" name="estrellas_user" class="form-control" >
                                <option value="1">⭐</option>
                                <option value="2">⭐⭐</option>
                                <option value="3">⭐⭐⭐</option>
                                <option value="4">⭐⭐⭐⭐</option>
                                <option value="5">⭐⭐⭐⭐</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select id="cars2" name="estado_user" class="form-control" >
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success col-md-5">
                                Guardar
                            </button>
                            <input type="reset" class="btn btn-success col-md-5">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
